<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".TaskDetail"
    android:background="@color/purpleBlue">

    <androidx.appcompat.widget.Toolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/babyBlue"
        app:layout_constraintTop_toTopOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:drawableStart="@drawable/ic_playlist_add"
                android:gravity="left|center_horizontal"
                android:text=" Task Detail"
                android:fontFamily="@font/judsonregular"
                android:textColor="@color/purple"
                android:textSize="20dp" />
        </LinearLayout>
    </androidx.appcompat.widget.Toolbar>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <TextView
            android:id="@+id/Title"
            android:layout_width="90dp"
            android:layout_height="29dp"
            android:layout_marginTop="20dp"
            android:layout_marginLeft="16dp"
            android:text="Title"
            android:fontFamily="@font/judsonregular"
            android:textColor="@color/purple"
            android:textSize="16dp" />

        <EditText
            android:id="@+id/theTitle"
            android:layout_width="260dp"
            android:layout_height="29dp"
            android:layout_marginTop="19dp"
            android:layout_marginBottom="10dp"
            android:layout_marginRight="16dp"
            android:hint="@string/hint_word"
            android:textSize="12dp"
            android:fontFamily="@font/robotoregular"
            android:background="@drawable/bg_add_task"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:id="@+id/course"
            android:layout_width="90dp"
            android:layout_height="29dp"
            android:layout_marginTop="20dp"
            android:layout_marginLeft="16dp"
            android:text="Course"
            android:fontFamily="@font/judsonregular"
            android:textColor="@color/purple"
            android:textSize="16dp" />

        <EditText
            android:id="@+id/theCourse"
            android:layout_width="260dp"
            android:layout_height="29dp"
            android:layout_marginTop="18dp"
            android:layout_marginBottom="10dp"
            android:layout_marginRight="16dp"
            android:hint="@string/hint_word"
            android:textSize="12dp"
            android:fontFamily="@font/robotoregular"
            android:background="@drawable/bg_add_task" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:id="@+id/duedate"
            android:layout_width="90dp"
            android:layout_height="29dp"
            android:layout_marginTop="20dp"
            android:layout_marginLeft="16dp"
            android:text="Due Date"
            android:fontFamily="@font/judsonregular"
            android:textColor="@color/purple"
            android:textSize="16dp"/>

        <EditText
            android:id="@+id/theduedate"
            android:layout_width="260dp"
            android:layout_height="29dp"
            android:layout_marginTop="18dp"
            android:layout_marginBottom="10dp"
            android:layout_marginRight="16dp"
            android:hint="@string/hint_word"
            android:textSize="12dp"
            android:fontFamily="@font/robotoregular"
            android:background="@drawable/bg_add_task"  />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:id="@+id/textViewAddTime"
            android:layout_width="90dp"
            android:layout_height="29dp"
            android:layout_marginTop="20dp"
            android:layout_marginLeft="16dp"
            android:text="Time"
            android:fontFamily="@font/judsonregular"
            android:textColor="@color/purple"
            android:textSize="16dp"/>

        <EditText
            android:id="@+id/editTextAddTime"
            android:layout_width="260dp"
            android:layout_height="29dp"
            android:layout_marginTop="18dp"
            android:layout_marginBottom="10dp"
            android:layout_marginRight="16dp"
            android:hint="@string/hint_word"
            android:textSize="12dp"
            android:fontFamily="@font/robotoregular"
            android:background="@drawable/bg_add_task"  />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        <TextView
            android:id="@+id/description"
            android:layout_width="90dp"
            android:layout_height="29dp"
            android:layout_marginTop="20dp"
            android:layout_marginLeft="16dp"
            android:text="Description"
            android:fontFamily="@font/judsonregular"
            android:textColor="@color/purple"
            android:textSize="16dp" />

        <EditText
            android:id="@+id/desc"
            android:layout_width="355dp"
            android:layout_height="160dp"
            android:layout_marginTop="20dp"
            android:layout_marginLeft="16dp"
            android:layout_marginRight="16dp"
            android:textSize="12dp"
            android:fontFamily="@font/robotoregular"
            android:background="@drawable/bg_add_task" />
    </LinearLayout>

    <Button
        android:id="@+id/buttonAdd"
        android:layout_width="355dp"
        android:layout_height="wrap_content"
        android:text="add task"
        android:fontFamily="@font/judsonregular"
        android:layout_marginTop="32dp"
        android:layout_marginLeft="16dp"
        android:backgroundTint="@color/purple"/>

</LinearLayout>