<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".TaskDetail"
    android:background="@color/purpleBlue">

    <androidx.appcompat.widget.Toolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/babyBlue"
        app:layout_constraintTop_toTopOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/textviewToolbar"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:drawableStart="@drawable/ic_search"
                android:gravity="left|center_horizontal"
                android:text=" Task Detail"
                android:fontFamily="@font/judsonregular"
                android:textColor="@color/purple"
                android:textSize="20dp" />
        </LinearLayout>
    </androidx.appcompat.widget.Toolbar>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <TextView
            android:id="@+id/textViewTitle"
            android:layout_width="90dp"
            android:layout_height="29dp"
            android:layout_marginTop="20dp"
            android:layout_marginLeft="16dp"
            android:text="Title"
            android:fontFamily="@font/judsonregular"
            android:textColor="@color/purple"
            android:textSize="16dp" />

        <TextView
            android:id="@+id/editTextTitle"
            android:layout_width="250dp"
            android:layout_height="29dp"
            android:layout_marginTop="19dp"
            android:layout_marginBottom="10dp"
            android:fontFamily="@font/robotoregular"
            android:background="@drawable/bg_task_detail"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:id="@+id/textViewCourse"
            android:layout_width="90dp"
            android:layout_height="29dp"
            android:layout_marginTop="20dp"
            android:layout_marginLeft="16dp"
            android:text="Course"
            android:fontFamily="@font/judsonregular"
            android:textColor="@color/purple"
            android:textSize="16dp" />

        <TextView
            android:id="@+id/editTextCourse"
            android:layout_width="250dp"
            android:layout_height="29dp"
            android:layout_marginTop="18dp"
            android:layout_marginBottom="10dp"
            android:fontFamily="@font/robotoregular"
            android:background="@drawable/bg_task_detail" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:id="@+id/textViewDate"
            android:layout_width="90dp"
            android:layout_height="29dp"
            android:layout_marginTop="20dp"
            android:layout_marginLeft="16dp"
            android:text="Due Date"
            android:fontFamily="@font/judsonregular"
            android:textColor="@color/purple"
            android:textSize="16dp"/>

        <TextView
            android:id="@+id/editTextDate"
            android:layout_width="250dp"
            android:layout_height="29dp"
            android:layout_marginTop="18dp"
            android:layout_marginBottom="10dp"
            android:fontFamily="@font/robotoregular"
            android:background="@drawable/bg_task_detail"  />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:id="@+id/textViewDetailTime"
            android:layout_width="90dp"
            android:layout_height="29dp"
            android:layout_marginTop="20dp"
            android:layout_marginLeft="16dp"
            android:text="Time"
            android:fontFamily="@font/judsonregular"
            android:textColor="@color/purple"
            android:textSize="16dp"/>

        <TextView
            android:id="@+id/editTextDetailTime"
            android:layout_width="250dp"
            android:layout_height="29dp"
            android:layout_marginTop="18dp"
            android:layout_marginBottom="10dp"
            android:fontFamily="@font/robotoregular"
            android:background="@drawable/bg_task_detail"  />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        <TextView
            android:id="@+id/textViewDescription"
            android:layout_width="90dp"
            android:layout_height="29dp"
            android:layout_marginTop="20dp"
            android:layout_marginLeft="16dp"
            android:text="Description"
            android:fontFamily="@font/judsonregular"
            android:textColor="@color/purple"
            android:textSize="16dp" />

        <TextView
            android:id="@+id/editTextDesc"
            android:layout_width="350dp"
            android:layout_height="160dp"
            android:layout_marginTop="20dp"
            android:layout_marginLeft="16dp"
            android:fontFamily="@font/robotoregular"
            android:background="@drawable/bg_task_detail" />
    </LinearLayout>

</LinearLayout>